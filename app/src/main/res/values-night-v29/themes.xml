<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/MainTextAppearance</item>

        <item name="tabIndicator">@drawable/rounded_rect</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorFullWidth">true</item>

        <item name="android:background">@drawable/rounded_rect</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="MainTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ImageTint">
        <item name="tint">@color/white</item>
    </style>

    <style name="ImageTintList">
        <item name="tint">@color/black</item>
    </style>

    <style name="ImageBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageBackgroundInverted">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="Popup">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="TextMain" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/MainTextAppearance</item>
    </style>

    <style name="TextList" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/MainTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/MainTextAppearance</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textAppearance">@style/MainTextAppearance</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/MainTextAppearance</item>
    </style>

    <style name="Switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/MainTextAppearance</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

</resources>