<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".screens.taskview.TaskViewFragment">

    <TextView
        android:id="@+id/taskTitleLabelTextTv"
        style="@style/TextMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTitleTextTv"
        style="@style/TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:hint="@string/task_title"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_circle_fill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTitleLabelTextTv"
        tools:ignore="RtlSymmetry,TextContrastCheck" />

    <View
        android:id="@+id/viewSeparatorTv1"
        style="@style/ImageBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTitleTextTv" />

    <TextView
        android:id="@+id/deadlineTextTv"
        style="@style/TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/deadline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparatorTv1" />

    <TextView
        android:id="@+id/dateTextTv"
        style="@style/TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center|start"
        android:hint="@string/date"
        android:importantForAutofill="no"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:windowSoftInputMode="stateAlwaysHidden"
        app:drawableEndCompat="@drawable/ic_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlineTextTv"
        tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry,TextContrastCheck" />


    <TextView
        android:id="@+id/timeTextTv"
        style="@style/TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:gravity="center|start"
        android:hint="@string/time"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTextTv"
        tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry,TextContrastCheck" />


    <View
        android:id="@+id/viewSeparatorTv2"
        style="@style/ImageBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextTv" />

    <TextView
        android:id="@+id/tagsLabelTextTv"
        style="@style/TextMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextTv" />

    <TextView
        android:id="@+id/tagsTextTv"
        style="@style/TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center|start"
        android:hint="@string/tags"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagsLabelTextTv"
        tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry,TextContrastCheck" />

    <Button
        android:id="@+id/setCompleteBtnTv"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/set_complete"
        android:textAllCaps="false"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>